                                        <option value=<%= eachEmpResult.E_name %> selected><%= eachEmpResult.E_name %></option>
                                    <% } else {%>
                                        <option value=<%= eachEmpResult.E_name %>><%= eachEmpResult.E_name %></option>
                                    <% } %>
                                <% }) %>
                                <option value="addNewEmp">Add New Employer...</option>    
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary" name="update">Update  </button>   <button type="submit" class="btn btn-primary" name="delete">Delete</button>
                    </div>
                    <% jumboID = jumboID + 1 %>
                <% }) %>  
        </form>
    </div>
