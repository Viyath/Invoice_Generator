    <body>
        <div class="container">
        <form id = "mainForm">
                <div class="form-group">
                    <input type="text" class="form-control" id="searchSite" placeholder="Enter site name to search...">
                    <br>
                    <button type="submit" class="btn btn-primary" name="add">Add New</button>                    
                </div>
                <hr>
                <% console.log(results1)
                     jumboID = 0 %>
                <% results1.forEach(function( eachResult){ %>
                    <div class="jumbotron" id=<%= jumboID %></div>
                        <label for="SiteName">Site Name</label>
                        <input type="text" class="form-control" name="site_name" value=<%= eachResult.S_name %>>
